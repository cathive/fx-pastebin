<xsd:schema xmlns="http://www.cathive.com/pastebin"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:tns="http://www.cathive.com/pastebin"
            targetNamespace="http://www.cathive.com/pastebin"
            elementFormDefault="qualified">

    <!-- ==== Types ==== -->

    <xsd:simpleType name="UniqueIdentifier">
        <xsd:restriction base="xsd:long"/>
    </xsd:simpleType>

    <xsd:complexType name="AbstractEntity">
        <xsd:attribute name="id" type="UniqueIdentifier"/>
    </xsd:complexType>

    <xsd:complexType name="Paste">
        <xsd:sequence>
            <xsd:element name="title" type="xsd:string"/>
            <xsd:element name="content" type="xsd:string"/>
        </xsd:sequence>
        <xsd:attribute name="paste_type_id" type="xsd:long"/>
        <xsd:attribute name="user_profile_id" type="xsd:long"/>
    </xsd:complexType>


    <!-- ==== Elements ==== -->

    <xsd:element name="paste_type" xml:base="AbstractEntity">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="name" type="xsd:string"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="paste" xml:base="Paste"/>

    <xsd:element name="pastes">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="paste" type="tns:Paste" minOccurs="0" maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="user_profile" xml:base="AbstractEntity">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="name" type="xsd:string"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

</xsd:schema>