<wsdl:definitions name="PasteService"
                  targetNamespace="http://www.cathive.com/pastebin"
                  xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
                  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
                  xmlns:tns="http://www.cathive.com/pastebin"
                  xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <wsdl:types>
        <xsd:schema>
            <xsd:import namespace="http://www.cathive.com/pastebin" schemaLocation="PasteModel.xsd"/>
        </xsd:schema>
    </wsdl:types>

    <wsdl:message name="ListRecentPastesRequest"/>
    <wsdl:message name="ListRecentPastesResponse">
        <wsdl:part name="pastes" element="tns:paste"/>
    </wsdl:message>

    <wsdl:portType name="ListRecentPastesService">
        <wsdl:operation name="listRecentPastes">
            <wsdl:input message="tns:ListRecentPastesRequest"/>
            <wsdl:output message="tns:ListRecentPastesResponse"/>
        </wsdl:operation>
    </wsdl:portType>

    <wsdl:binding name="PastebinServiceBinding" type="tns:ListRecentPastesService">
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
        <wsdl:operation name="listRecentPastes">
            <soap:operation soapAction="listRecentPastes" style="document"/>
            <wsdl:input>
                <soap:body use="literal" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"/>
            </wsdl:input>
            <wsdl:output>
                <soap:body use="literal" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"/>
            </wsdl:output>
        </wsdl:operation>
    </wsdl:binding>

    <wsdl:service name="PastebinService">
        <wsdl:port name="PastebinPort" binding="tns:PastebinServiceBinding">
            <soap:address location="http://www.cathive.com/pastebin/ws"/>
        </wsdl:port>
    </wsdl:service>

</wsdl:definitions>